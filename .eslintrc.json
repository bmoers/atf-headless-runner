{
    "env": {
        "browser": false,
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "2020"
    },
    "rules": {
        "no-unused-vars": "warn",
        "quotes": [
            "error", "single", {
                "avoidEscape": true

            }
        ],

        "indent": [
            "error", 4
        ],
        "no-console": "warn",
        
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
